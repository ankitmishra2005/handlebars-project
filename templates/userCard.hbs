<div class="flex items-center gap-4 bg-gray-800 p-5 rounded-xl shadow-lg border
    {{#if (eq role 'admin')}} border-blue-500 {{else}} border-gray-700 {{/if}}">

    <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" 
         class="w-12 h-12 rounded-full" />

    <div>
        <h2 class="text-xl font-semibold flex items-center gap-2">
            {{name}}
            
            {{#if (eq role 'admin')}}
                <span class="badge badge-info text-xs">ADMIN</span>
            {{/if}}
        </h2>

        <p class="text-gray-300">{{email}}</p>
        <p class="text-gray-400 text-sm">Role: {{role}}</p>
    </div>

</div>

